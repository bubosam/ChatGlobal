<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boush.dreamchat.MeFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="900dp"
        >

        <ImageView android:id="@+id/ImageView" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1"
            android:src="@drawable/profile_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/selectPhoto"
            android:maxHeight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <Button android:text="Select a photo" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectPhoto"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp" />
        <Button android:text="Upload photo" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadPhoto"
            android:layout_alignTop="@+id/selectPhoto"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userNameUpdate"
            android:hint="@string/username"
            android:freezesText="true"
            android:layout_below="@+id/selectPhoto"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:layout_alignRight="@+id/uploadPhoto"
            android:layout_alignEnd="@+id/uploadPhoto"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/emailUpdate"
            android:drawableRight="@drawable/ic_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:freezesText="true"
            android:layout_below="@+id/userNameUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordUpadte"
            android:drawableRight="@drawable/ic_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_password"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:freezesText="true"
            android:layout_below="@+id/emailUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/uploadPhoto"
            android:layout_alignEnd="@+id/uploadPhoto"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold" />

        <Button
            android:text="Submit Changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitUpdate"

            android:height="50dp"
            android:width="150dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_rotate_profile_picture"
            android:background="@null"
            android:layout_alignBottom="@+id/ImageView"
            android:layout_alignRight="@+id/uploadPhoto"
            android:layout_alignEnd="@+id/uploadPhoto"
            android:onClick="rotate"
            android:paddingRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Basic info"
            android:id="@+id/textView"
            android:layout_below="@+id/selectPhoto"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Addtional info"
            android:id="@+id/textView2"
            android:layout_below="@+id/passwordUpadte"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_phone_white_18dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/phoneUpdate"
            android:hint="@string/phone_update"
            android:freezesText="true"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/firstNameUpdate"
            android:hint="@string/first_name_update"
            android:freezesText="true"
            android:layout_below="@+id/phoneUpdate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_person"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="@string/last_name_update"
            android:freezesText="true"
            android:layout_below="@+id/firstNameUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
    </ScrollView>
